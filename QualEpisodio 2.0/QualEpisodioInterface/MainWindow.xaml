<Window x:Class="QualEpisodioInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" ResizeMode="NoResize" WindowStyle="None" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="407*"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cbSeries" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Height="22" SelectionChanged="cbSeries_SelectionChanged" Grid.Column="1"/>
        <DataGrid x:Name="dgEpisodios" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="297" Width="387">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Teste" Width="SizeToCells" IsReadOnly="True">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
